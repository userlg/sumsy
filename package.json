{
  "name": "sumsy",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "lint": "eslint src/**/*.{ts,vue} tests/**/*.ts",
    "lint:fix": "eslint src/**/*.{ts,vue} tests/**/*.ts --fix",
    "lint:test": "eslint tests/**/*.{ts,tsx,vue} --fix",
    "format": "prettier src/**/*.{ts,vue} --write",
    "check": "npm run lint && npm run format",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "clean:app": "node --loader ts-node/esm src/scripts/run-reset-app.ts"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@tauri-apps/api": "2.8.0",
    "@tauri-apps/plugin-opener": "2.5.0",
    "chart.js": "^4.5.0",
    "gsap": "^3.13.0",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.4.1",
    "tailwindcss": "^4.1.11",
    "vue": "^3.5.13",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "@pinia/testing": "^1.0.2",
    "@tauri-apps/cli": "2.8.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/coverage-istanbul": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.0.5",
    "vite-svg-loader": "^5.1.0",
    "vitest": "^3.2.4",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^2.0.26"
  }
